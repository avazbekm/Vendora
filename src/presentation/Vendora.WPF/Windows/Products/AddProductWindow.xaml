<Window x:Class="Vendora.WPF.Windows.Products.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vendora.WPF.Windows.Products"
        mc:Ignorable="d"
        Title="Add Product - Style 2" Height="450" Width="600"
        WindowStyle="None" Background="Transparent">
    <Grid Margin="25">
        <Border Background="{StaticResource panelOverColor}" CornerRadius="15" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Yangi mahsulot qo'shish" FontSize="28" FontWeight="Bold"
                           Foreground="{StaticResource titleColor2}" Margin="0,0,0,20"/>

                <StackPanel Grid.Row="1">
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Mahsulot Nomi:" Foreground="{StaticResource titleColor3}" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Margin="5" Background="{StaticResource secondaryBackColor1}"
                                 Foreground="{StaticResource plainTextColor1}" BorderBrush="{StaticResource color1}"/>
                    </Grid>

                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Narxi:" Foreground="{StaticResource titleColor3}" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Margin="5" Background="{StaticResource secondaryBackColor1}"
                                 Foreground="{StaticResource plainTextColor1}" BorderBrush="{StaticResource color1}"/>
                    </Grid>

                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Kategoriya:" Foreground="{StaticResource titleColor3}" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="1" Margin="5" Background="{StaticResource secondaryBackColor1}"
                                  Foreground="{StaticResource plainTextColor1}" BorderBrush="{StaticResource color1}"/>
                    </Grid>

                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Tavsifi:" Foreground="{StaticResource titleColor3}" VerticalAlignment="Top"/>
                        <TextBox Grid.Column="1" Margin="5" Height="80" AcceptsReturn="True"
                                 Background="{StaticResource secondaryBackColor1}"
                                 Foreground="{StaticResource plainTextColor1}" BorderBrush="{StaticResource color1}"/>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Yaratish" Width="120" Margin="5" Background="{StaticResource color6}"
                            Foreground="{StaticResource titleColor1}" BorderBrush="{StaticResource color1}"/>
                    <Button Content="Rad etish" Width="120" Margin="5" Background="{StaticResource color8}"
                            Foreground="{StaticResource titleColor1}" BorderBrush="{StaticResource color1}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
